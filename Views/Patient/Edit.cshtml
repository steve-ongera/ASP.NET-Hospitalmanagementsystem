@model HospitalManagementSystem.Models.Patient

@{
    ViewData["Title"] = "Edit Patient";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f6f8;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        margin-top: 30px;
        color: #333;
    }

    form {
        max-width: 800px;
        margin: 30px auto;
        background-color: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .form-row > .form-group {
        width: 48%; /* Slightly less than 50% to add some space between columns */
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
        color: #444;
    }

    input.form-control,
    select.form-control,
    textarea.form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
        height: 40px; /* Consistent input height */
    }

    input.form-control:focus,
    select.form-control:focus,
    textarea.form-control:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    button, input[type="submit"] {
        background-color: #007bff;
        color: white;
        padding: 10px 18px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 16px;
        width: 100%;
        margin-top: 15px;
    }

    button:hover, input[type="submit"]:hover {
        background-color: #0056b3;
    }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #6c757d;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: #007bff;
        text-decoration: underline;
    }


</style>

<h2>Edit Patient Details</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Name">Full Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter full name" required />
        </div>

        <div class="form-group">
            <label asp-for="DateOfBirth">Date of Birth</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" required />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" type="number" class="form-control" placeholder="Enter age" required />
        </div>

        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select asp-for="Gender" class="form-control" required>
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Phone">Phone Number</label>
            <input asp-for="Phone" class="form-control" type="tel" placeholder="Enter phone number" required />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address">Full Address</label>
        <input asp-for="Address" class="form-control" placeholder="Enter full address" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>

    <a asp-action="Index" class="back-link">‚Üê Back to Patient List</a>
</form>