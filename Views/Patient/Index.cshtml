@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "Patients List";
}

<style>
    .custom-table {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .custom-table th {
        background-color: #007bff;
        color: white;
        text-align: center;
    }

    .custom-table td {
        vertical-align: middle;
        text-align: center;
    }

    .action-btns a {
        margin: 0 4px;
    }

    h2 {
        margin-bottom: 20px;
    }

    .add-btn {
        margin-bottom: 15px;
    }
</style>

<h2>Patients</h2>

<p>
    <a asp-action="Create" class="btn btn-primary add-btn">Add New Patient</a>
</p>

<table class="table table-bordered custom-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Age</td>
                <td>@patient.Gender</td>
                <td>@patient.Phone</td>
                <td class="action-btns">
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

