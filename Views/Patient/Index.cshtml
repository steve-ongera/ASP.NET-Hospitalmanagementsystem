@model IEnumerable<HospitalManagementSystem.Models.Patient>

@{
    ViewData["Title"] = "Patients List";
}

<h2>Patients</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Patient</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.FullName</td>
                <td>@patient.Age</td>
                <td>@patient.Gender</td>
                <td>@patient.Phone</td>
                <td>
                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
