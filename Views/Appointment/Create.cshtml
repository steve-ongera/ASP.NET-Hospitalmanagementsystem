@model HospitalManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Schedule Appointment";
}

<h2>Schedule New Appointment</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-control" required>
            <option value="">Select Patient</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="DoctorId">Doctor</label>
        <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-control" required>
            <option value="">Select Doctor</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentDate">Date</label>
        <input asp-for="AppointmentDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="AppointmentTime">Time</label>
        <input asp-for="AppointmentTime" type="time" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Scheduled">Scheduled</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Confirm Appointment</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
